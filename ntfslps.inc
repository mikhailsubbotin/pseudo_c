NTFSLPS_MAX_FS_PATH_LENGTH = 32767
NTFSLPS_FS_PATH_MEMORY_LENGTH = (NTFSLPS_MAX_FS_PATH_LENGTH + 1) * 2

if defined USE_NTFSLPS & USE_NTFSLPS eq TRUE
  FS_PATH_MEMORY_LENGTH = NTFSLPS_FS_PATH_MEMORY_LENGTH
  MAX_FS_PATH_LENGTH = NTFSLPS_MAX_FS_PATH_LENGTH
  MAX_PATH_LENGTH = NTFSLPS_MAX_FS_PATH_LENGTH
  PATH_MEMORY_LENGTH = NTFSLPS_FS_PATH_MEMORY_LENGTH
else
  FS_PATH_MEMORY_LENGTH = MAX_PATH
  MAX_FS_PATH_LENGTH = MAX_PATH
  MAX_PATH_LENGTH = MAX_PATH
  PATH_MEMORY_LENGTH = MAX_PATH
end if

DFS_SUCCESS = 0
DFS_PARTIALLY_MISSED = 1
DFS_ERROR = -1

if ~ defined WIN32_FIND_STREAM_DATA
struct WIN32_FIND_STREAM_DATA
  StreamSize LARGE_INTEGER
  cStreamName TCHAR (MAX_PATH + 36) dup (?)
ends
end if

if ~ defined WIN32_FIND_STREAM_DATAA
struct WIN32_FIND_STREAM_DATAA
  StreamSize LARGE_INTEGER
  cStreamName db (MAX_PATH + 36) dup (?)
ends
end if

if ~ defined WIN32_FIND_STREAM_DATAW
struct WIN32_FIND_STREAM_DATAW
  StreamSize LARGE_INTEGER
  cStreamName du (MAX_PATH + 36) dup (?)
ends
end if
